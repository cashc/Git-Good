<p id="notice"><%= notice %></p>

<h1>Listing Exercise Steps</h1>

<table>
  <thead>
    <tr>
      <th>Exercise</th>
      <th>Step</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_steps.each do |exercise_step| %>
      <tr>
        <td><%= exercise_step.exercise_id %></td>
        <td><%= exercise_step.step_id %></td>
        <td><%= link_to 'Show', exercise_step %></td>
        <td><%= link_to 'Edit', edit_exercise_step_path(exercise_step) %></td>
        <td><%= link_to 'Destroy', exercise_step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

