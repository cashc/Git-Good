    <%= f.label :correct_response %><br>
    <%= f.text_area :correct_response, :cols => '64', :rows => '7' %>
  </div>
  <div class="field">
    <%= f.label :error_response %><br>
    <%= f.text_area :error_response, :cols => '64', :rows => '7' %>
  </div>
